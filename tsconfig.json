{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
	"paths" : {
		"@components/*" : ["./src/renderer/components/*"],
		"@tabs/*" : ["./src/renderer/tabs/*"],
		"@redux/*" : ["./src/renderer/redux/*"],
		"@shared_types/*" : ["./src/shared_types/*"],
	}
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
